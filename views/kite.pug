extends layout

block content
  h1= title
  
  - let result =results
  - let create = `dispatch(\"/kite/create\")`
  button.btn( class="btn-info", onclick= create) Add new kites
  div(class="container-fluid")
  div(class="row")
   each i,index  in result
     - let destination = `dispatch(\"/kite/update?id=${result._id}\")`
     - let detail = `dispatch(\"/kite/detail/?id=${result._id}")`
     - let deletesoaps = `dispatch(\"/kite/delete/?id=${result._id}")`      
     div(class="col-sm-2" onclick =`buy(${index})`) #{i.kite_color}, #{i.kite_quality}, #{i.kite_cost}
     button.btn( class="btn-primary ml-1", onclick= destination) Update
     button.btn( class="btn-success", onclick= detail) Details
     button.btn( class="btn-dark", onclick= deletesoaps) Delete
  script.
   function dispatch(path){
    window.location.href=path
   }
    script.
        function buy(a)
        {
            alert(`You purchased Item ${a+1}`)
        }